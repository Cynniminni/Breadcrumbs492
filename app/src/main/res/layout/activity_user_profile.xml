<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:background="#607D8B"
    android:textColor="#FFFFFF"
    tools:context="com.tumblr.breadcrumbs492.testapplication.SearchResults">

    <ImageView
        android:layout_width="400dp"
        android:layout_height="250dp"
        android:background="@drawable/white_rectangle"
        android:id="@+id/imageView"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />

    <ListView
        android:id="@+id/listView"
        android:textColor="#FFFFFF"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_alignTop="@+id/imageView"
        android:layout_alignParentStart="true" />

    <ToggleButton
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:text="ToggleButton"
        android:id="@+id/toggleDisplay"
        android:background="#FFFFFF"
        android:textColor="#607D8B"
        android:textOff="VIEW LIKED CRUMBS"
        android:textOn="VIEW USER CRUMBS"
        android:layout_above="@+id/imageView"
        android:layout_alignEnd="@+id/imageView"
        android:layout_marginBottom="3dp" />


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/toggleDisplay"
        android:layout_alignStart="@+id/imageView">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Username"
            android:id="@+id/tv_username"
            android:textStyle="bold"
            android:textColor="#FFFFFF"

            android:textSize="30sp"
            android:layout_gravity="right" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="35dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/tv_numOfCrumbs"
            android:textColor="#FFFFFF"
            android:layout_gravity="right" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/tv_numOfLikes"
            android:textColor="#FFFFFF"

            android:layout_gravity="right" />


    </LinearLayout>

</RelativeLayout>